---
const { content } = Astro.props;
import Intro from "./Intro.astro";
import FAQSchema from "./FAQSchema.astro";
---

<FAQSchema content={content} />

<Intro
  data={content}
  style="text-white relative py-18 mt-0 text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:py-28 justify-center bg-mariner-900"
>
  <div class="mx-auto max-w-7xl">
    <dl class="mt-20 divide-y divide-muted-200/10">
      {
        content.questions.map((question) => (
          <div class="py-8 first:pt-0 last:pb-0 lg:grid lg:grid-cols-12 lg:gap-8">
            <dt class="text-base/7 font-semibold text-muted-100 lg:col-span-5">
              {question.question}
            </dt>
            <dd class="mt-4 lg:col-span-7 lg:mt-0">
              <p class="text-base/7 text-muted-100">{question.answer}</p>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</Intro>

<div
  class="mx-auto max-w-7xl px-10 lg:px-20 py-12 sm:py-32 lg:py-20 bg-mariner-800"
>
  <h3 class="text-3xl font-semibold tracking-tight text-muted-100 sm:text-5xl">
    Still have questions?
  </h3>

  <div
    class="mt-6 lg:mt-20 flex flex-wrap justify-start align-middle items-center gap-6 z-10 animate-slow-fade"
  >
    {
      content.buttons.map((btn) => (
        <a
          href={btn.link}
          class={`${btn.primary ? "btn-primary" : "btn-white"} w-full md:w-auto`}
        >
          <span class="drop-shadow-sm">{btn.name}</span>
        </a>
      ))
    }
  </div>
</div>

---
const ENROLL_FORM_WEBHOOK_URL = import.meta.env.ENROLL_WEBHOOK_URL;
---

<form
  class="mx-auto max-w-xl pb-10"
  method="POST"
  id="contact_form"
  action=""
  data-astro-reload
>

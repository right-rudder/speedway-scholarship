---
import content from "../data/advantagesInfo.js";
import { FaCheck } from "react-icons/fa";
import ImageComp from "../components/utils/ImageComp.astro";

const { title, description, advantages, imagePath, imageAlt } = content;
---

<section class="py-16 lg:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8 flex flex-col lg:flex-row items-center gap-12">
    <!-- Image Section (Left) -->
    <div class="w-full lg:w-1/2" data-aos="fade-right">
      <ImageComp 
        imagePath={imagePath} 
        imageAlt={imageAlt} 
        styles="rounded-lg shadow-lg w-full h-auto object-cover"
      />
    </div>

    <!-- Text Content (Right) -->
    <div class="w-full lg:w-1/2">
      <h2 class="text-3xl lg:text-5xl font-bold text-accent-200 mb-4">
        {title}
      </h2>
      <p class="text-lg text-accent-200 mb-6">{description}</p>
      <ul class="space-y-4">
        {advantages.map((advantage, index) => (
          <li class="flex items-center space-x-3" data-aos="fade-right" data-aos-delay={index * 100}>
            <span class="text-primary-700 text-2xl"><FaCheck /></span>
            <div>
              <h3 class="text-lg font-semibold text-accent-100">{advantage.title}</h3>
              <p class="text-accent-200">{advantage.description}</p>
            </div>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

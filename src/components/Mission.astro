---
const { content } = Astro.props;
---

<section id="about" class="text-white relative pt-16 mt-0 text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-28 justify-center bg-mariner-800">
    <div class="mx-auto max-w-6xl lg:pr-4 md:px-10 lg:px-20">
        <div class="my-9">
            <p class="text-base font-semibold leading-7 text-primary-700 uppercase">
            {content.upperHeading}
            </p>
            <h1
            class="mt-0 text-3xl font-bold tracking-tight text-muted-100 sm:text-4xl"
            >
            {content.title}
            </h1>
            <p
            class="mt-6 text-xl leading-8 text-muted-50 text-justify"
            set:html={content.description}
            />
        </div>
            
            
        </div>

        <div class="container py-10 mx-auto">
            
            <hr class="my-12 border-muted-200  border-muted-200">

            <div class="lg:flex lg:items-center">
                <div class="w-full space-y-12  ">
                    <!-- Intro -->
                    <div class="w-full">
                        <h1 class="text-2xl font-semibold text-muted-800 capitalize lg:text-3xl  text-white justify-center">{content.missionStatement.title}</h1>

                        <div class="mt-2">
                            <span class="inline-block w-40 h-1 bg-blue-500 rounded-full"></span>
                            <span class="inline-block w-3 h-1 ml-1 bg-blue-500 rounded-full"></span>
                            <span class="inline-block w-1 h-1 ml-1 bg-blue-500 rounded-full"></span>
                        </div>

                        {
                            content.missionStatement.description.map(( paragraph) => (
                                <p class=" pt-2  text-white">{paragraph}</p>
                            ))
                        }
                    </div>
                    
                </div>
                <!-- Image -->
                <div class="hidden lg:flex lg:items-center lg:w-1/2 lg:justify-center ">
                    <img class="w-[22rem] h-[28rem] object-cover xl:w-[34rem] xl:h-[34rem] rounded-2xl " src={content.commitment.imagePath} alt={content.commitment.imageAlt}>
                </div>
            </div>

            <hr class="my-12 border-muted-200  border-muted-200">

            <div class="lg:flex lg:items-center">
                <div class="w-full space-y-12  ">
                    <!-- Intro -->
                    <div class="w-full">
                        <h1 class="text-2xl font-semibold text-muted-800 capitalize lg:text-3xl  text-white justify-center">{content.commitment.title}</h1>

                        <div class="mt-2">
                            <span class="inline-block w-40 h-1 bg-blue-500 rounded-full"></span>
                            <span class="inline-block w-3 h-1 ml-1 bg-blue-500 rounded-full"></span>
                            <span class="inline-block w-1 h-1 ml-1 bg-blue-500 rounded-full"></span>
                        </div>

                        {
                            content.commitment.description.map(( paragraph) => (
                                <p class=" pt-2  text-white">{paragraph}</p>
                            ))
                        }
                    </div>

                    <!-- Cards -->
                    {
                        content.commitment.bullets && content.commitment.bullets.map((bullet) => (
                            <div class="md:flex md:items-start md:-mx-4">
                                <span class="inline-block p-2 text-blue-500 bg-blue-100 rounded-xl md:mx-4  text-white  bg-blue-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                                    </svg>
                                </span>

                                <div class="mt-3 md:mx-3 md:mt-0">
                                    <div class="">
                                        <p class="   text-white"></p>
                                        <ul class="">
                                            <li>
                                                <p class="mt-3 text-muted-100  text-muted-100">
                                                    {bullet}
                                                </p>
                                            </li> 

                                        </ul>
                                    </div>
                                
                                </div>
                            </div>
                        ))
                    }
                    
                </div>
                <!-- Image -->
                <div class="hidden lg:flex lg:items-center lg:w-1/2 lg:justify-center ">
                    <img class="w-[22rem] h-[28rem] object-cover xl:w-[34rem] xl:h-[34rem] rounded-2xl " src={content.missionStatement.imagePath} alt={content.missionStatement.imageAlt}>
                </div>
            </div>

            <hr class="my-12 border-muted-200  border-muted-200">
            <div class="grid grid-cols-2 gap-8 md:grid-cols-6 lg:grid-cols-5">
                
            </div>
        </div>
    </div>
</section>
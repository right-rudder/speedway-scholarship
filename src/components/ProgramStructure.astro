                            </svg>  */}
                        <span class="mx-2" set:html={item.title}></span>
                        </a>
                ))
            }
            
            
        </div>

        <div class="container py-10 mx-auto">
            
            <hr class="my-12 border-gray-200 dark:border-muted-200">

            <div class="lg:flex lg:items-center">
                <div class="w-full space-y-12  ">
                    <!-- Intro -->
                    <div class="w-full">
                        <h1 class="text-2xl font-semibold text-gray-800 capitalize lg:text-3xl dark:text-white justify-center">{speedwayScholarship.programStructure.title}</h1>

                        <div class="mt-2">
                            <span class="inline-block w-40 h-1 bg-blue-500 rounded-full"></span>
                            <span class="inline-block w-3 h-1 ml-1 bg-blue-500 rounded-full"></span>
                            <span class="inline-block w-1 h-1 ml-1 bg-blue-500 rounded-full"></span>
                        </div>

                        {
                            speedwayScholarship.programStructure.description.map(( paragraph) => (
                                <p class=" pt-2 dark:text-white">{paragraph}</p>
                            ))
                        }
                    </div>

                    <!-- Cards -->
                    {
                        speedwayScholarship.programStructure.phases && speedwayScholarship.programStructure.phases.map((phase) => (
                            <div class="md:flex md:items-start md:-mx-4">
                                <span class="inline-block p-2 text-blue-500 bg-blue-100 rounded-xl md:mx-4 dark:text-white dark:bg-blue-500">

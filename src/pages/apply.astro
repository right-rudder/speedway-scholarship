---
import ApplyComponent from "../components/ApplyComponent.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
// import Location from "../components/Location.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
import { WESTWIND_AIR_SERVICE as imgHeader } from "../constsImages";

const header = {
  imagePath: imgHeader.imagePath,
  headerH1: "Enroll at </br>Speedway",
  imageAlt: imgHeader.imageAlt,
  paragraph:
    "Start your journey with Speedway Flight Training. Whether you're working toward a career in aviation or pursuing a personal goal, our team is here to help you enroll in the right program and take flight.",
  buttons: [
    {
      name: "Start Enrollment",
      link: "#contact",
      primary: true,
    },
  ],
};
---

<BaseLayout
  siteTitle="Enroll Now | Speedway Flight Training"
  siteDescription="Enroll at Speedway Flight Training in Hampton, GA. Submit your application to start training for your Private Pilot License, Instrument Rating, or career pilot program."
  keywords="flight school application, Enroll flight training, Speedway Flight Training enrollment, pilot license application, flight school Hampton GA"
>
  <HeaderScreen content={header} />

  <ApplyComponent />

  <!-- <Location /> -->
</BaseLayout>

---
import ApplyComponent from "../components/ApplyComponent.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
// import Location from "../components/Location.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
import { WESTWIND_AIR_SERVICE as imgHeader } from "../constsImages";

const header = {
  imagePath: imgHeader.imagePath,
  headerH1: "Apply for </br>Speedway Scholarship Fund.",
  imageAlt: imgHeader.imageAlt,
  paragraph:
    "Get 15 Hours of Free Flight Training—Earn the Rest with Dedication! The Speedway Flight Training Scholarship helps high school students take off toward a professional aviation career—at no cost to their families.",
  buttons: [
    {
      name: "Apply now",
      link: "#contact",
      primary: true,
    },
  ],
};
---

<BaseLayout
  siteTitle="Apply | Speedway Scholarship Fund."
  siteDescription=""
  keywords="flight school application, Enroll flight training, Speedway Flight Training enrollment, pilot license application, flight school Hampton GA"
>
  <HeaderScreen content={header} />
  <iframe
    src="https://msg.flightschoolcrm.com/widget/form/Y7PND4FbQ8nB1dgjlMq1"
    style="width:100%;height:100%;border:none;border-radius:3px"
    id="inline-Y7PND4FbQ8nB1dgjlMq1" 
    data-layout="{'id':'INLINE'}"
    data-trigger-type="alwaysShow"
    data-trigger-value=""
    data-activation-type="alwaysActivated"
    data-activation-value=""
    data-deactivation-type="neverDeactivate"
    data-deactivation-value=""
    data-form-name="Application Form"
    data-height="3378"
    data-layout-iframe-id="inline-Y7PND4FbQ8nB1dgjlMq1"
    data-form-id="Y7PND4FbQ8nB1dgjlMq1"
    title="Application Form"
        >
  </iframe>
  <script src="https://msg.flightschoolcrm.com/js/form_embed.js"></script>
  <!-- <ApplyComponent /> -->

  <!-- <Location /> -->
</BaseLayout>

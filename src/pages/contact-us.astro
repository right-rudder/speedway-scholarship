---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactUsWrapper from "../components/ContactUs.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
import { PILOT_STUDENT_DOING_CHECKLIST_ON_PLANE_1 } from "../constsImages";

const header = {
  imagePath: PILOT_STUDENT_DOING_CHECKLIST_ON_PLANE_1.imagePath,
  headerH1: "SPEEDWAY</br>SCHOLARSHIP",
  imageAlt: PILOT_STUDENT_DOING_CHECKLIST_ON_PLANE_1.imageAlt,
  paragraph:
    "Have questions? Contact-us",
  buttons: [
    {
      name: "Get In Touch",
      link: "#contact",
      primary: true,
    },
  ],
};
---

<BaseLayout
  siteTitle="Contact Us | Speedway Flight Scholarship Fund"
  siteDescription="Have questions about flight training or enrollment? Contact Speedway Flight Training in Hampton, GA to speak with our team or schedule your first flight."

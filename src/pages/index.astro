---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
import UnderHeader from "../components/UnderHeader.astro";

import homePage from "../data/pages/homePage";
import { speedwayScholarship } from "../data/scholarshipData";

import "/src/styles/global.css";
import ProgramStructure from "../components/ProgramStructure.astro";
import Requirements from "../components/Requirements.astro";
import ProgramDetails from "../components/ProgramDetails.astro";
import FAQ from "../components/FAQ.astro";

const { data } = homePage;
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <!-- HEADER -->
  <HeaderScreen content={data.header} />
  <UnderHeader content={data.underHeader} />
  <!-- CONTENT -->
  <ProgramStructure content={data.missionStatementSection} />
  <Requirements content={speedwayScholarship.eligibility} id="requirements"/>
  <ProgramDetails content={speedwayScholarship.awardDetails} id="details"/>
  <FAQ content={data.frequentQuestions} />
  <!-- CTA -->

</BaseLayout>
